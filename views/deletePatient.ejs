<%- include('layout.ejs') %>

<div class="card">
    <div class="card-header">
        <h3>Delete Patient</h3>
    </div>
    <div class="card-body">
        <p>Are you sure you want to delete the patient <%= patient.name %>?</p>
        <form action="/api/patients/<%= patient._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger">Delete Patient</button>
            <a href="/api/patients" class="btn">Cancel</a>
        </form>
    </div>
</div>
